{
    "exclude": [
        "node_modules"
    ],
    "include": [
        "./src/**/*"
    ],
    "compilerOptions": {
            "rootDir": "src",
            "target": "ES2021",
            "module": "ES2022",
            "allowJs": true,
            "checkJs": true,
        "isolatedModules": true,
        "esModuleInterop": true,
        "moduleResolution": "node",
        "noEmit": false,
        "strict": false,
        "jsx": "react",
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "baseUrl": "./src",
        "paths": {
            "*": [
                "*",
                "../tests/*"
            ]
        },
        "preserveWatchOutput": true
    }
}